---
import AsideItem from '@components/AsideItem.astro'

import CloseIcon from '@icons/close.astro'
import QueueIcon from '@icons/queue.astro'
import UsersIcon from '@icons/users.astro'
import SearchIcon from '@icons/search.astro'
import PlaylistIcon from '@icons/playlist.astro'

const { conectedUsers = '3' } = Astro.props
---

<aside
  class="fixed top-0 left-0 z-40 w-64 h-screen transition-transform -translate-x-full sm:translate-x-0 peer-checked:translate-x-0"
  aria-label="Sidebar"
>
  <div class="h-full px-3 py-4 pt-10 overflow-y-auto bg-gray-50 dark:bg-gray-900">
    <span id="close" class="flex justify-end mb-2 md:hidden">
      <CloseIcon />
    </span>
    <ul class="space-y-2 font-medium">
      <AsideItem href="#search" name="Search">
        <SearchIcon />
      </AsideItem>
      <AsideItem href="#playlists" name="Playlists">
        <PlaylistIcon />
      </AsideItem>
      <AsideItem href="#queue" name="Queue">
        <QueueIcon />
      </AsideItem>
      <AsideItem href="#users" name="Conected Users" trail={conectedUsers}>
        <UsersIcon />
      </AsideItem>
    </ul>
  </div>
</aside>
